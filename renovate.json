{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "automerge": true,
  "rangeStrategy": "bump",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "platformAutomerge": true,
  "requiredStatusChecks": [],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchPackageNames": ["valaxy", "valaxy-theme-sakura", "valaxy-theme-antfu"],
      "enabled": true
    }
  ]
}
